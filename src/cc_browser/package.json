{
  "name": "cc-browser",
  "version": "1.0.0",
  "type": "module",
  "description": "Fast browser automation daemon for Claude Code",
  "main": "src/daemon.mjs",
  "bin": {
    "cc-browser": "src/cli.mjs"
  },
  "scripts": {
    "start": "node src/daemon.mjs",
    "dev": "node --watch src/daemon.mjs",
    "bundle": "esbuild src/cli.mjs --bundle --platform=node --format=cjs --outfile=build/cli.cjs --external:playwright-core",
    "build": "npm run bundle && pkg build/cli.cjs --targets node18-win-x64 --output dist/cc-browser.exe"
  },
  "dependencies": {
    "playwright-core": "^1.52.0"
  },
  "devDependencies": {
    "esbuild": "^0.27.3",
    "pkg": "^5.8.1"
  },
  "pkg": {
    "targets": ["node18-win-x64"]
  }
}
